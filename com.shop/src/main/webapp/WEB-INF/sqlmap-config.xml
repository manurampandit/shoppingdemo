<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<!-- changes from the defaults -->
		<setting name="lazyLoadingEnabled" value="false" />
	</settings>
	<typeAliases>
		<typeAlias type="com.control.User" alias="User"/>
		<typeAlias type="com.control.Orders" alias="order"/>
		<typeAlias type="com.control.Address" alias="address"/>
	</typeAliases>
<mappers>	 
	<mapper resource="com/control/UserService.xml" /> 
	<mapper resource="com/control/OrdersService.xml" /> 
</mappers> 
	
</configuration>
