<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<!-- changes from the defaults -->
		<setting name="lazyLoadingEnabled" value="false" />
	</settings>
	<typeAliases>
		<typeAlias type="com.control.objects.User" alias="User"/>
		<typeAlias type="com.control.objects.Orders" alias="order"/>
		<typeAlias type="com.control.objects.Address" alias="address"/>
	</typeAliases>
<mappers>	 
	<mapper resource="service/UserService.xml" /> 
	<mapper resource="service/OrdersService.xml" /> 
</mappers> 
	
</configuration>
